<body>
  <div class="container">
    <header>
      <h1><i class="fas fa-wallet icon"></i>Controle de Contas</h1>
      <button id="toggle-theme"><i class="fas fa-moon"></i> Tema</button>
    </header>

    <form id="conta-form">
      <input type="text" id="nome" placeholder="Nome da Conta" required />
      <input type="number" id="valor" placeholder="Valor (R$)" required />
      <input type="date" id="data" required />
      <select id="categoria">
        <option value="">Categoria</option>
        <option value="Aluguel">Aluguel</option>
        <option value="Energia">Energia</option>
        <option value="Internet">Internet</option>
        <option value="Outros">Outros</option>
      </select>
      <button type="submit"><i class="fas fa-plus-circle"></i> Adicionar</button>
      <div class="actions">
        <button type="button" onclick="form.reset()"><i class="fas fa-eraser"></i> Limpar</button>
        <button type="button" onclick="resetarContas()"><i class="fas fa-trash"></i> Resetar Lista</button>
      </div>
    </form>

    <section id="lista-contas">
      <h2><i class="fas fa-list icon"></i>Contas Adicionadas</h2>
      <ul id="contas"></ul>
    </section>
  </div>

  <script>
    const form = document.getElementById('conta-form');
    const contasList = document.getElementById('contas');
    const toggleThemeBtn = document.getElementById('toggle-theme');

    window.addEventListener('load', () => {
      atualizarLista();
    });

    form.addEventListener('submit', function (e) {
      e.preventDefault();

      const nome = document.getElementById('nome').value;
      const valor = document.getElementById('valor').value;
      const data = document.getElementById('data').value;
      const categoria = document.getElementById('categoria').value || 'Sem categoria';

      const conta = {
        nome,
        valor: parseFloat(valor).toFixed(2),
        data: new Date(data).toLocaleDateString('pt-BR'),
        categoria
      };

      const contas = JSON.parse(localStorage.getItem('contas')) || [];
      contas.push(conta);
      localStorage.setItem('contas', JSON.stringify(contas));

      atualizarLista();
      form.reset();
    });

    toggleThemeBtn.addEventListener('click', () => {
      document.body.classList.toggle('dark');
    });

    function adicionarContaNaLista(conta, index) {
      const li = document.createElement('li');
      li.innerHTML = `<span><i class="fas fa-file-invoice-dollar icon"></i>${conta.nome} - R$${conta.valor} - ${conta.data} - ${conta.categoria}</span>
        <button class="delete-btn" onclick="removerConta(${index})"><i class="fas fa-trash-alt"></i></button>`;
      contasList.appendChild(li);
    }

    function removerConta(index) {
      const contas = JSON.parse(localStorage.getItem('contas')) || [];
      contas.splice(index, 1);
      localStorage.setItem('contas', JSON.stringify(contas));
      atualizarLista();
    }

    function resetarContas() {
      localStorage.removeItem('contas');
      atualizarLista();
    }

    function atualizarLista() {
      contasList.innerHTML = '';
      const contas = JSON.parse(localStorage.getItem('contas')) || [];
      contas.forEach((conta, index) => adicionarContaNaLista(conta, index));
    }
  </script>
</body>
</
